@page "{id}"
@model Auth.API.Pages.Posts.DeleteModel
@{
    ViewData["Title"] = "Delete post";
}

<div class="max-w-xl mx-auto bg-white rounded-xl shadow-sm border border-slate-100 p-6">
    <h1 class="text-xl font-semibold text-slate-900 mb-3">Delete post</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-3 rounded-md border border-red-200 bg-red-50 text-red-700 px-3 py-2 text-sm">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.PostTitle is not null)
    {
        <p class="text-sm text-slate-700 mb-4">
            Are you sure you want to delete the post
            <span class="font-semibold">"@Model.PostTitle"</span>?
        </p>
    }

    <form method="post" class="flex gap-3">
        @* Hidden input ensures the ID is sent back to OnPostAsync *@
        <input type="hidden" asp-for="Id" />

        <button type="submit"
                class="inline-flex justify-center items-center px-4 py-2 rounded-md bg-rose-600 text-white text-sm font-medium hover:bg-rose-700">
            Yes, delete
        </button>
        <a asp-page="Index" class="text-sm text-slate-600 hover:text-slate-800 flex items-center">Cancel</a>
    </form>
</div>