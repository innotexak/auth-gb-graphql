@page
@model Auth.API.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen bg-slate-50 flex items-center justify-center p-4">
    <div class="w-full max-w-md bg-white rounded-lg shadow border border-slate-200 p-8">
        <h1 class="text-3xl font-bold text-slate-900 mb-2">Create an account</h1>
        <p class="text-slate-600 text-sm mb-6">
            Quickly get onboarded by filling the form below.
        </p>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mb-4 rounded-lg border border-red-300 bg-red-50 text-red-700 px-4 py-3 text-sm">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="mb-4 rounded-lg border border-emerald-300 bg-emerald-50 text-emerald-800 px-4 py-3 text-sm">
                @Model.SuccessMessage
            </div>
        }

        <form method="post" class="space-y-5">
            <div>
                <label asp-for="Input.Username" class="block text-sm font-medium text-slate-900 mb-2"></label>
                <input asp-for="Input.Username"
                       class="w-full px-4 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent transition" />
                <span asp-validation-for="Input.Username" class="text-xs text-red-600 mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-slate-900 mb-2"></label>
                <input asp-for="Input.Email" type="email"
                       class="w-full px-4 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent transition" />
                <span asp-validation-for="Input.Email" class="text-xs text-red-600 mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-slate-900 mb-2"></label>
                <input asp-for="Input.Password" type="password"
                       class="w-full px-4 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent transition" />
                <span asp-validation-for="Input.Password" class="text-xs text-red-600 mt-1 block"></span>
            </div>

            <button type="submit"
                    class="w-full px-4 py-2 bg-slate-900 text-white rounded-lg text-sm font-medium hover:bg-slate-800 transition-colors">
                Register
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}