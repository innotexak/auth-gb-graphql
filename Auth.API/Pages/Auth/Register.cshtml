@page
@model Auth.API.Pages.Auth.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="max-w-md mx-auto bg-white rounded-xl shadow-sm border border-slate-100 p-6">
    <h1 class="text-2xl font-semibold text-slate-900 mb-2">Create an account</h1>
    <p class="text-sm text-slate-600 mb-4">
        Register a new user using the GraphQL <code class="bg-slate-100 px-1 rounded">registerUser</code> mutation.
    </p>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-3 rounded-md border border-red-200 bg-red-50 text-red-700 px-3 py-2 text-sm">
            @Model.ErrorMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="mb-3 rounded-md border border-emerald-200 bg-emerald-50 text-emerald-800 px-3 py-2 text-sm">
            @Model.SuccessMessage
        </div>
    }

    <form method="post" class="space-y-4">
        <div>
            <label asp-for="Input.Username" class="block text-sm font-medium text-slate-700 mb-1"></label>
            <input asp-for="Input.Username"
                   class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 text-sm" />
            <span asp-validation-for="Input.Username" class="text-xs text-red-600"></span>
        </div>

        <div>
            <label asp-for="Input.Email" class="block text-sm font-medium text-slate-700 mb-1"></label>
            <input asp-for="Input.Email" type="email"
                   class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 text-sm" />
            <span asp-validation-for="Input.Email" class="text-xs text-red-600"></span>
        </div>

        <div>
            <label asp-for="Input.Password" class="block text-sm font-medium text-slate-700 mb-1"></label>
            <input asp-for="Input.Password" type="password"
                   class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 text-sm" />
            <span asp-validation-for="Input.Password" class="text-xs text-red-600"></span>
        </div>

        <button type="submit"
                class="w-full inline-flex justify-center items-center px-4 py-2 rounded-md bg-sky-600 text-white text-sm font-medium hover:bg-sky-700">
            Register
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


