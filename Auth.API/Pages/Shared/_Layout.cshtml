@using System.Text.Json
@using Auth.API.Services
@{
    var title = ViewData["Title"] as string ?? "TeiChat";
    var isLoggedIn = User.Identity?.IsAuthenticated ?? false;
    var username = User.Identity?.Name;
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
    <header class="bg-slate-900 text-white">
        <nav class="max-w-6xl mx-auto flex items-center justify-between px-4 py-3">
            <a asp-page="/Index" class="flex items-center gap-2">
                <span class="text-lg font-semibold">TeiChat</span>
            </a>
            <div class="flex items-center gap-4 text-sm">
                <a asp-page="/Posts/Index" class="hover:text-sky-300">Posts</a>
                <a asp-page="/Auth/Profile" class="hover:text-sky-300">Profile</a>

                @if (!isLoggedIn)
                {
                    <a asp-page="/Auth/Login" class="px-3 py-1 rounded-md bg-sky-500 hover:bg-sky-600 text-white">Login</a>
                    <a asp-page="/Auth/Register" class="px-3 py-1 rounded-md border border-sky-400 text-sky-300 hover:bg-sky-700/40">Register</a>
                }
                else
                {
                    <a asp-page="/Group/Index" class="hover:text-sky-300">Groups</a>
                    <a asp-page="/Dm/Chat" class="hover:text-sky-300">Messages</a>
                    <span class="text-sky-300">Hello, @username!</span>
                    <form method="post" asp-page="/Auth/Logout" class="inline">
                        <button type="submit" class="px-3 py-1 rounded-md bg-red-500 hover:bg-red-600 text-white">Logout</button>
                    </form>
                }
            </div>
        </nav>
    </header>
    <main class="flex-1">
        <div class="max-w-5xl mx-auto px-4 py-8">
            @RenderBody()
        </div>
        @RenderSection("Scripts", required: false)
    </main>
    <footer class="bg-slate-900 text-slate-300 text-xs py-4 mt-8">
        <div class="max-w-6xl mx-auto px-4 flex justify-between">
            <span>&copy; @DateTime.UtcNow.Year GQDotnet</span>
            <span>GraphQL + Razor Pages Demo</span>
        </div>
    </footer>
</body>
</html>


